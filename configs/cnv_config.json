{
    "arguments": [
        {
            "name": "--input_dir",
            "type": "str",
            "required": true,
            "help": "Directory containing input .tiff files"
        },
        {
            "name": "--out_dir",
            "type": "str",
            "required": true,
            "help": "Directory where output .png files will be saved"
        },
        {
            "name": "--date",
            "type": "str",
            "required": true,
            "help": "The date of the image"
        },
        {
            "name": "--vis",
            "type": "str",
            "required": false,
            "default": "false",
            "help": "Visualize the created RGB .png image"
        }
    ]
}